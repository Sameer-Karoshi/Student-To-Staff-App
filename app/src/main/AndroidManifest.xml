<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sameer.studenttostaff">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/teachestuicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SturegActivity"
            android:label="Student Registration"
            android:parentActivityName=".Activity.StartActivity"></activity>
        <activity android:name=".Activity.FacregActivity"
            android:label="Faculty Registration"
            android:parentActivityName=".Activity.StartActivity"/>
        <activity android:name=".Activity.LoginActivity"
            android:label="Login"
            android:parentActivityName=".Activity.StartActivity"/>
        <activity android:name=".Activity.StartActivity" />
        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>